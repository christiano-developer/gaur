FB_PASSWORD=your_facebook_password

# Scraper Configuration (Optional - defaults provided)
# FB_HEADLESS=false
# FB_DEBUG=false
# FB_POSTS_PER_KEYWORD=20
# FB_MAX_IMAGES_PER_POST=5
